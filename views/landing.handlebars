<header class="absolute inset-x-0 top-0 z-50">
    <div class="bg-white">

        {{!-- Nav Bar --}}
        <nav class="flex items-center justify-between p-3 lg:px-7" aria-label="Global">
            <div class="flex lg:flex-1">
                <a href="/" class="-m-1.5 p-1.5">
                    <span class="sr-only">UnityBiz</span>
                    <img src="../assets/logo.svg" class="h-20" alt="UnityBiz Logo" />
                </a>
            </div>
            {{#if logged_in}}
            <button
                class=" logout-btn rounded-md bg-green-400 px-3.5 py-2.5 text-sm font-semibold text-black shadow-sm hover:bg-green-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-300">
